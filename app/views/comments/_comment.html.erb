<div class="comment clearfix">
  <div class="comment_context">
   <!--  <p class="comment_name">
      <strong><%= comment.name %></strong>
    </p> -->
    <p><%= image_tag current_user.image(:thumb) %><%= current_user.username %></p>
    <p class="comment_body text">
      <%= comment.body %>
    </p>
    <p class="comment_time" text-size="15">
      <em><%= time_ago_in_words(comment.created_at) %>Ago</em>
    </p>
    <hr>
  </div>
</div>