<div class="comment clearfix">
  <div class="comment_context">
    <p><%= image_tag comment.item.user.image(:thumb) %><%= comment.item.user.username %></p>
    <p class="comment_body text">
      <%= comment.body %>
      <!-- link_to "Delete Comment", item_comment_path(comment.id), :method => :delete, data: { confirm: 'Are you sure?' } %> -->
    </p>
    <p class="comment_time" text-size="15">
      <em><%= time_ago_in_words(comment.created_at) %> ago</em>
    </p>
    <hr>
  </div>
</div>